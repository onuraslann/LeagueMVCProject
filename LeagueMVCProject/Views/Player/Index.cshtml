@model List<LeagueMVCProject.Models.EntityFramework.Players>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success" href="/Player/Yeni">NewPlayer</a>
<table class="table table-bordered" style="background-color:darkgray" id="tblPlayer">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>TeamsId</th>
            <th>Number</th>
            <th>PositionName</th>
            <th>Age</th>
            <th>LeagueId</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
        <tr>

            <td>@player.Id</td>
            <td>@player.FirstName</td>
            <td>@player.LastName</td>
            <td>@player.TeamsId</td>
            <td>@player.Number</td>
            <td>@player.PositionName</td>
            <td>@player.Age</td>
            <td>@player.Leagues.LeagueName</td>
            <td><a class="btn btn-primary" href="/Player/Update/@player.Id">Update</a></td>
            <td><a class="btn btn-warning btnPlayerDelete" data-id="@player.Id">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
